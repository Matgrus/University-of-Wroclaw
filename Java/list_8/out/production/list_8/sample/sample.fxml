<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="350" prefWidth="650" spacing="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <fx:define>
        <Font fx:id="FONT" size="14" />
    </fx:define>

    <StackPane>
        <Rectangle fill="TRANSPARENT" height="50" stroke="GRAY" width="410.0" />
        <Text fx:id="output">
         <font>
            <Font size="24.0" />
         </font></Text>
      <padding>
         <Insets bottom="20.0" />
      </padding>
    </StackPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="button_7" onAction="#numbers" prefHeight="40" prefWidth="60" text="7" />
        <Button fx:id="button_8" onAction="#numbers" prefHeight="40" prefWidth="60" text="8" />
        <Button fx:id="button_9" onAction="#numbers" prefHeight="40" prefWidth="60" text="9" />
        <Button fx:id="button_A" onAction="#numbers" prefHeight="40" prefWidth="60" text="A" />
        <Button fx:id="button_div" onAction="#operations" prefHeight="40" prefWidth="60" text="/" />
        <Button fx:id="button_BIN" onAction="#operations" prefHeight="40" prefWidth="60" text="BIN" />
        <Button fx:id="button_DEC" onAction="#operations" prefHeight="40" prefWidth="60" text="DEC" />
        <Button fx:id="button_HEX" onAction="#operations" prefHeight="40" prefWidth="60" text="HEX" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="button_4" onAction="#numbers" prefHeight="40" prefWidth="60" text="4" />
        <Button fx:id="button_5" onAction="#numbers" prefHeight="40" prefWidth="60" text="5" />
        <Button fx:id="button_6" onAction="#numbers" prefHeight="40" prefWidth="60" text="6" />
        <Button fx:id="button_B" onAction="#numbers" prefHeight="40" prefWidth="60" text="B" />
        <Button fx:id="button_mult" onAction="#operations" prefHeight="40" prefWidth="60" text="*" />
        <Button fx:id="button_MOD" onAction="#operations" prefHeight="40" prefWidth="60" text="MOD" />
        <Button fx:id="button_POW" onAction="#operations" prefHeight="40" prefWidth="60" text="POW" />
        <Button fx:id="button_NEWT" onAction="#operations" prefHeight="40" prefWidth="60" text="NEWT" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="button_1" onAction="#numbers" prefHeight="40" prefWidth="60" text="1" />
        <Button fx:id="button_2" onAction="#numbers" prefHeight="40" prefWidth="60" text="2" />
        <Button fx:id="button_3" onAction="#numbers" prefHeight="40" prefWidth="60" text="3" />
        <Button fx:id="button_C" onAction="#numbers" prefHeight="40" prefWidth="60" text="C" />
        <Button fx:id="button_sub" onAction="#operations" prefHeight="40" prefWidth="60" text="-" />
        <Button fx:id="button_SIGN" onAction="#numbers" prefHeight="40" prefWidth="60" text="SIGN" />
        <Button fx:id="button_DEL" onAction="#numbers" prefHeight="40" prefWidth="60" text="DEL" />
        <Button fx:id="button_fact" onAction="#operations" prefHeight="40" prefWidth="60" text="N!" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="button_0" onAction="#numbers" prefHeight="40" prefWidth="60" text="0" />
        <Button fx:id="button_F" onAction="#numbers" prefHeight="40" prefWidth="60" text="F" />
        <Button fx:id="button_E" onAction="#numbers" prefHeight="40" prefWidth="60" text="E" />
        <Button fx:id="button_D" onAction="#numbers" prefHeight="40" prefWidth="60" text="D" />
        <Button fx:id="button_add" onAction="#operations" prefHeight="40" prefWidth="60" text="+" />
        <Button fx:id="button_res" onAction="#operations" prefHeight="40" prefWidth="130" text="=" />
        <Button fx:id="button_CLR" onAction="#operations" prefHeight="40" prefWidth="60" text="C" />
    </HBox>

</VBox>
